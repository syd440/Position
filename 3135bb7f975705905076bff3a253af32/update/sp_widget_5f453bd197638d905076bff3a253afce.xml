        <script><![CDATA[(function() {
  /* populate the 'data' object */
  /* e.g., data.table = $sp.getValue('table'); */

	var title = options.title || "Duties";
	data.title = gs.getMessage(title);
	
	data.positionID = $sp.getParameter('position_id');
	data.table = "x_snc_position_man_posting";
	
	data.duties = getPositionDuties(data.table, data.positionID);
	
	function getPositionDuties(table, sysID) {
		var duties = "";
		
		var gr = new GlideRecord(table);
		
		if(gr.get(sysID)) {
			duties = gr.position.x_snc_position_man_duties.toString();
		}
		
		return duties;
	}
	
})();]]></script>
