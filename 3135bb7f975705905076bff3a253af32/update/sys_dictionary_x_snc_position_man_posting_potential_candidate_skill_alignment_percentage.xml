<?xml version="1.0" encoding="UTF-8"?><record_update>
    <sys_dictionary action="INSERT_OR_UPDATE" element="skill_alignment_percentage" table="x_snc_position_man_posting_potential_candidate">
        <active>true</active>
        <array>false</array>
        <attributes>edge_encryption_enabled=true</attributes>
        <audit>false</audit>
        <calculation><![CDATA[(function calculatedFieldValue(current) {

	var skillPercentage = 0;
	var userSkillCount = 0;

	var postingSkills = current.posting.required_skills || '';
	var postingSkillsArr = [];

	if(postingSkills) {
		postingSkillsArr = postingSkills.split(',');
	}

	var postingSkillCount = postingSkillsArr.length;

	for(var i = 0; i < postingSkillsArr.length; i++) {
		var userSkill = new GlideRecord('sys_user_has_skill');
		userSkill.addEncodedQuery('user=' + current.getValue('potential_candidate') + '^skill=' + postingSkillsArr[i]);
		userSkill.query();

		if(userSkill.next()) {
			userSkillCount++;
		}
	}

	if(postingSkillCount > 0) {
		skillPercentage = ((userSkillCount / postingSkillCount) * 100).toFixed(2);
	}

	return skillPercentage;

})(current);]]></calculation>
